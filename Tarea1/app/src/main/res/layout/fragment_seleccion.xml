<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Barra superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#b57edc"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarea 1 (Checklist/Radiobutton/Switch)"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Subtítulo centrado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selección de datos 📝"
            android:textStyle="bold"
            android:textColor="#b57edc"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Género -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Género *"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbMasculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculino"/>
            <RadioButton
                android:id="@+id/rbFemenino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femenino"/>
            <RadioButton
                android:id="@+id/rbOtro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otro"/>
        </RadioGroup>

        <!-- Estado Civil -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado Civil *"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgEstadoCivil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbSoltero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soltero(a)"/>
            <RadioButton
                android:id="@+id/rbCasado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casado(a)"/>
            <RadioButton
                android:id="@+id/rbUnionLibre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unión libre"/>
            <RadioButton
                android:id="@+id/rbOtroEstadoCivil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otro"/>
        </RadioGroup>

        <!-- Ocupación -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocupación *"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cbEstudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudiante"/>
        <CheckBox
            android:id="@+id/cbEmpleado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empleado"/>
        <CheckBox
            android:id="@+id/cbDesempleado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desempleado"/>
        <CheckBox
            android:id="@+id/cbIndependiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Independiente"
            android:layout_marginBottom="16dp"/>

        <!-- Switch -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Vives con otra persona?"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/swViveConPersona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No / Sí"
            android:layout_marginBottom="24dp"/>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnRegresarSeleccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Regresar"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSiguienteSeleccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Siguiente"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
